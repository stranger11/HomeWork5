<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ContentFragment"
    android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".ContentFragment">

        <View
            style="@style/Line"
            android:id="@+id/line_two"
            android:layout_marginTop="380dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            style="@style/ProfileText"
            android:id="@+id/textView2"
            android:layout_marginTop="36dp"
            android:text="Profile"
            android:textSize="30sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.09"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            style="@style/ButtonMenu"
            android:id="@+id/menu"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.864"
            app:layout_constraintStart_toEndOf="@+id/textView2"
            app:layout_constraintTop_toTopOf="parent" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/main_profile_image"
            android:layout_width="129dp"
            android:layout_height="121dp"
            android:layout_marginTop="32dp"
            android:src="@drawable/main_profile_image"
            app:civ_border_color="@color/white"
            app:civ_border_width="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.056"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView2" />

        <TextView
            style="@style/ProfileText"
            android:id="@+id/name_profile"
            android:layout_marginTop="8dp"
            android:text="Steve Rodgers"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/main_profile_image"
            app:layout_constraintTop_toTopOf="@+id/main_profile_image" />

        <TextView
            style="@style/Profession"
            android:id="@+id/name_profession"
            app:layout_constraintEnd_toEndOf="@+id/name_profile"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/name_profile"
            app:layout_constraintTop_toBottomOf="@+id/name_profile" />

        <TextView
            style="@style/LinkText"
            android:id="@+id/name_web"
            app:layout_constraintEnd_toEndOf="@+id/name_profession"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/name_profession"
            app:layout_constraintTop_toBottomOf="@+id/name_profession" />

        <View
            style="@style/Line"
            android:id="@+id/line_one"
            android:layout_marginTop="272dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            style="@style/CountText"
            android:id="@+id/textView6"
            android:text="18"
            app:layout_constraintEnd_toEndOf="@+id/line_one"
            app:layout_constraintHorizontal_bias="0.115"
            app:layout_constraintStart_toStartOf="@+id/line_one"
            app:layout_constraintTop_toBottomOf="@+id/line_one" />

        <TextView
            style="@style/InfoText"
            android:id="@+id/posts"
            android:text="Posts"
            app:layout_constraintEnd_toEndOf="@+id/textView6"
            app:layout_constraintStart_toStartOf="@+id/textView6"
            app:layout_constraintTop_toBottomOf="@+id/textView6" />

        <TextView
            style="@style/CountText"
            android:id="@+id/followers"
            android:layout_marginStart="84dp"
            android:layout_marginLeft="84dp"
            android:text="54243"
            app:layout_constraintEnd_toEndOf="@+id/line_one"
            app:layout_constraintHorizontal_bias="0.033"
            app:layout_constraintStart_toEndOf="@+id/textView6"
            app:layout_constraintTop_toBottomOf="@+id/line_one" />

        <TextView
            style="@style/CountText"
            android:id="@+id/following"
            android:layout_marginEnd="32dp"
            android:layout_marginRight="32dp"
            android:text="211"
            app:layout_constraintEnd_toEndOf="@+id/line_one"
            app:layout_constraintTop_toBottomOf="@+id/line_one" />

        <TextView
            style="@style/InfoText"
            android:id="@+id/followers_count"
            android:text="Followers"
            app:layout_constraintEnd_toEndOf="@+id/followers"
            app:layout_constraintStart_toStartOf="@+id/followers"
            app:layout_constraintTop_toBottomOf="@+id/followers" />

        <TextView
            style="@style/InfoText"
            android:id="@+id/following_count"
            android:text="Following"
            app:layout_constraintEnd_toEndOf="@+id/following"
            app:layout_constraintStart_toStartOf="@+id/following"
            app:layout_constraintTop_toBottomOf="@+id/following" />

        <Button
            style="@style/ButtonFollow"
            android:id="@+id/button_follow"
            app:layout_constraintEnd_toEndOf="@+id/line_two"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/line_two"
            app:layout_constraintTop_toBottomOf="@+id/line_two" />

        <Button
            style="@style/ButtonTelegram"
            android:id="@+id/button_telegram"
            app:layout_constraintEnd_toEndOf="@+id/line_two"
            app:layout_constraintHorizontal_bias="0.914"
            app:layout_constraintStart_toEndOf="@+id/button_follow"
            app:layout_constraintTop_toBottomOf="@+id/followers_count" />

    </androidx.constraintlayout.widget.ConstraintLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rc_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </FrameLayout>

</LinearLayout>

